FROM python:3.12-slim

WORKDIR /app

ENV DEBIAN_FRONTEND=noninteractive

# Copy the api project files
COPY kvasir-app/main_server/server /app/server
COPY kvasir-research /app/kvasir-research
COPY kvasir-ontology /app/kvasir-ontology

# Install synesis data structures package from source and the main package
RUN pip install --upgrade pip && \
    pip install /app/server && \
    pip install /app/kvasir-research && \
    pip install /app/kvasir-ontology

WORKDIR /app/server

CMD ["uvicorn", "src.synesis_api.main:app", "--host", "0.0.0.0", "--port", "8000"]