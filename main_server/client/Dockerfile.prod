# Use Node.js 20 Alpine for production
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies
COPY kvasir-app/main_server/client/package.json ./

# Copy source code
COPY kvasir-app/main_server/client .

RUN npm install

# Build the application
RUN npm run build

# Expose port 3000
EXPOSE 3000

# Start production server
CMD ["npm", "start"]
